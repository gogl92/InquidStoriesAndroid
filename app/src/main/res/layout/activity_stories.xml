<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.inquid.develop.inquidstoriesandroid.MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="276dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_marginEnd="@dimen/buttons_separator"
                android:layout_marginRight="@dimen/buttons_separator"
                android:onClick="viewStory">

                <TextView
                    android:id="@+id/lb_uds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/story_11"
                    android:layout_alignRight="@+id/story_11"
                    android:layout_below="@+id/story_11"
                    android:text="Story 1"
                    android:textSize="12sp" />

                <com.inquid.develop.inquidstoriesandroid.RoundedImageView
                    android:id="@+id/story_11"
                    android:layout_width="@dimen/story_size"
                    android:layout_height="@dimen/story_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/story_1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_marginEnd="@dimen/buttons_separator"
                android:layout_marginRight="@dimen/buttons_separator">

                <TextView
                    android:id="@+id/lb_story_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/story_1"
                    android:layout_alignRight="@+id/story_1"
                    android:layout_below="@+id/story_1"
                    android:text="Story 1"
                    android:textSize="12sp" />

                <com.inquid.develop.inquidstoriesandroid.RoundedImageView
                    android:id="@+id/story_1"
                    android:layout_width="@dimen/story_size"
                    android:layout_height="@dimen/story_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/story_2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_marginEnd="@dimen/buttons_separator"
                android:layout_marginRight="@dimen/buttons_separator">

                <TextView
                    android:id="@+id/lb_story_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/story_2"
                    android:layout_alignRight="@+id/story_2"
                    android:layout_below="@+id/story_2"
                    android:text="Story 2"
                    android:textSize="12sp" />

                <com.inquid.develop.inquidstoriesandroid.RoundedImageView
                    android:id="@+id/story_2"
                    android:layout_width="@dimen/story_size"
                    android:layout_height="@dimen/story_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/story_3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_marginEnd="@dimen/buttons_separator"
                android:layout_marginRight="@dimen/buttons_separator">

                <TextView
                    android:id="@+id/lb_story_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/story_3"
                    android:layout_alignRight="@+id/story_3"
                    android:layout_below="@+id/story_3"
                    android:text="Story 3"
                    android:textSize="12sp" />

                <com.inquid.develop.inquidstoriesandroid.RoundedImageView
                    android:id="@+id/story_3"
                    android:layout_width="@dimen/story_size"
                    android:layout_height="@dimen/story_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/story_4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_marginEnd="@dimen/buttons_separator"
                android:layout_marginRight="@dimen/buttons_separator">

                <TextView
                    android:id="@+id/lb_story_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/story_4"
                    android:layout_alignRight="@+id/story_4"
                    android:layout_below="@+id/story_4"
                    android:text="Story 3"
                    android:textSize="12sp" />

                <com.inquid.develop.inquidstoriesandroid.RoundedImageView
                    android:id="@+id/story_4"
                    android:layout_width="@dimen/story_size"
                    android:layout_height="@dimen/story_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/story_5" />
            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
